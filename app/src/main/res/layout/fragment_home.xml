<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#eee">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:onClick="one"
            app:cardBackgroundColor="#099A8D"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_home1"
                android:gravity="center"
                android:textColor="#fff"
                android:text="ফ্রিল্যান্সিং কি? কেন? এবং কিভাবে শুরু করবেন?"
                android:textSize="20dp">

            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:onClick="two"
            app:cardBackgroundColor="#099A8D"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_home2"
                android:gravity="center"
                android:textColor="#fff"
                android:text="ফ্রিল্যান্সারদের স্বাস্থ্য ঝুঁকি তার প্রতিকার"
                android:textSize="20dp">

            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:onClick="three"
            app:cardBackgroundColor="#099A8D"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_home3"
                android:gravity="center"
                android:textColor="#fff"
                android:text="জাভাস্ক্রিপ্ট কি ?"
                android:textSize="20dp">

            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:onClick="four"
            app:cardBackgroundColor="#099A8D"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_home4"
                android:gravity="center"
                android:textColor="#fff"
                android:text="বিটকয়েন: বিশ্বের সবচেয়ে জনপ্রিয় ক্রিপ্টোকারেন্সি"
                android:textSize="20dp">

            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:onClick="five"
            app:cardBackgroundColor="#099A8D"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_home5"
                android:gravity="center"
                android:textColor="#fff"
                android:text="কুরআন নাযিলের উদ্দেশ্য এবং কুরআন পাঠে আমাদের আচারন"
                android:textSize="20dp">

            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:onClick="six"
            app:cardBackgroundColor="#099A8D"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_home6"
                android:gravity="center"
                android:textColor="#fff"
                android:text="ধূমপানের বিপদ ও তার প্রতিকার"
                android:textSize="20dp">

            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:onClick="seven"
            app:cardBackgroundColor="#099A8D"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_home7"
                android:gravity="center"
                android:textColor="#fff"
                android:text="সাজেক ভ্যালী – যেখানে মেঘ এসে ছুয়ে দিয়ে যায়"
                android:textSize="20dp">

            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:onClick="eight"
            app:cardBackgroundColor="#099A8D"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_home8"
                android:gravity="center"
                android:textColor="#fff"
                android:text="ঘুরে এলাম সাগর কন্যা কুয়াকাটা থেকে"
                android:textSize="20dp">

            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

</LinearLayout>